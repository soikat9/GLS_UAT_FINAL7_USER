<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="make_invisible" model="res.groups">
            <field name="name">Hide Lost Reason CRM</field>
        </record>

        <record id="own_sales_team_groups" model="res.groups">
            <field name="name">CRM (Own Sales Team)</field>
        </record>
        <record model="ir.ui.menu" id="crm.crm_menu_root">
            <field name="groups_id" eval="[(5,ref('make_invisible'))]"/>
        </record>

        <record id="crm_lead_teams_rule" model="ir.rule">
            <field name="name">CRM Teams Only</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[('team_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(6,0,[ref('solinda_crm.own_sales_team_groups')])]"/>
        </record>

        <menuitem id="crm.menu_crm_lost_reason" name="Lost Reasons" groups="make_invisible"/>

    </data>

</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="purchase_order_inherit_form" model="ir.ui.view">
            <field name="name">purchase.order.inherit.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name='picking_type_id' position="after">
                    <field name="custom_sequence" invisible="1"/>
                    <field name="system_sequence" invisible="1"/>
                </field>
                <field name="date_approve" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
            </field>
        </record>
 
        <record id="import_purchase_order_wizard_view" model="ir.ui.view">
            <field name="name">wizard for import sale order from csv file and xlsx file</field>
            <field name="model">import.purchase.order</field>
            <field name="arch" type="xml">
                <form string="Import Purchase Order">
                    <group>
                        <group>
                            <field name="purchase_import_option" widget="radio"/>
                        </group>
                        <group>
                            <field name="import_product_search" widget="radio"/>
                        </group>
                        <group>
                            <field name="purchase_stage" widget="radio"/>
                        </group>
                    </group>
                    <group>
                        <field name="file" filename="name"/>
                    </group>
                    <group>
                        <field name="purchase_sequence_opt"/>
                    </group>
                    <footer>
                        <button class="fa fa-upload btn-primary" name="import_purchase_order" string="Import" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="import_purchase_order_wizard_action" model="ir.actions.act_window">
            <field name="name">Import Purchase Order</field>
            <field name="res_model">import.purchase.order</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="import_purchase_order_wizard_action" id="import_purchase_order_import" parent="purchase.menu_purchase_config"/>

    </data>
</odoo>
 
